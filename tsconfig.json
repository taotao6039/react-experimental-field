{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "target": "es5",
      "jsx": "react",
      "module": "es6",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "declaration": false,
      "removeComments": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "strict": true,
      "lib": ["es6", "es7", "dom"],
      "types": [
        "react", 
        "styled-components",
        "node"
      ]
    },
    "include": [
      "./src/**/*",
      "./typings/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }