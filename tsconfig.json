{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "lib": ["es5", "es6", "dom"],
      "jsx": "react",
      "resolveJsonModule": true,
      "types": [
        "react", 
        "styled-components",
        "node"
      ]
    },
    "include": [
      "./src/**/*",
      "./typings/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }